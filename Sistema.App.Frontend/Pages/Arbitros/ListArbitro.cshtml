@page
@model Sistema.App.Frontend.Pages.ListArbitroModel
@{
}
<h1>Listado de Arbitros</h1>
<a class="btn btn-primary" asp-page="./Create">Nuevo Arbitro</a>
<table class="table">

    <tbody>
        @foreach (var arbitro in Model.arbitros)
        {
            <tr>
                <th>@arbitro.Nombre</th>
                <th>@arbitro.Apellido</th>
                <th>@arbitro.Documento</th>
                <th>@arbitro.Telefono</th>
                <th>@arbitro.Escuela</th>

                <td>
                        <a class="btn btn-primary" asp-page="./Details" asp-route-id="@arbitro.Id">Detalle</a>
                        <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@arbitro.Id">Modificar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
